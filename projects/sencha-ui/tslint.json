{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "sc",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "sc",
      "kebab-case"
    ],
    "variable-name": {
      "options": [
        "allow-leading-underscore"
      ]
    },
    "semicolon": {
      "options": [
        "always",
        "ignore-bound-class-methods"
      ]
    }
  }
}
